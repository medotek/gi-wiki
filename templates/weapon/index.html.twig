{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('weapon') }}
{% endblock %}

{% block title %}Armes{% endblock %}

{% block body %}
    <div class="weapon-controller">
        <div class="banner"></div>
        <div class="weapon-container">
                <div class="weapon-card table-header">
                    <div class="weapon-img"></div>
                    <div class="weapon-name">Nom</div>
                    <div class="weapon-type">Type</div>
                    <div class="weapon-rarity">Raret√©</div>
                    <div class="weapon-attack">Attaque de Base</div>
                </div>
            {% for weapon in weapons %}
                <div class="weapon-card">
                    <img class="weapon-img" src="{{ weapon.image }}" alt="{{ weapon.name }}">
                    <div class="weapon-name">{{ weapon.name }}</div>
                    <div class="weapon-type">{{ weapon.type }}</div>
                    <div class="weapon-rarity">{{ weapon.rarity }}*</div>
                    <div class="weapon-attack">{{ weapon.baseAttack }} ATK</div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
