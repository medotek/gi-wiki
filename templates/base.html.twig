<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap-grid.min.css">
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}{% endblock %}

    </head>
    <body>
    <div class="row">
        <div class="col-md-3">
            <header>
                {% if (app.request.get('_route') == 'admin') %}
                    <h1>admin</h1>
                {% else %}
                    <h1>menu</h1>
                    <div class="logo">
                        <img src="" alt="">
                    </div>
                    <div class="nav">
                        <ul>
                            <li>Accueil</li>
                            <li>News</li>
                            <li>Personnages</li>
                            <li>Armes</li>
                            <li>Connexion</li>
                        </ul>
                    </div>
                {% endif %}
            </header>
        </div>
        <div class="col-md-9">
            {% block body %}{% endblock %}
        </div>
    </div>



    </body>
</html>
